<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pd.game.magic64"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:icon="@drawable/white_knight"
        android:label="@string/app_name" >
        <activity
            android:name="com.pd.game.magic64.Magic64"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Wallpaper" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pd.game.magic64.About"
            android:label="@string/about_title"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.pd.game.magic64.Settings"
            android:label="@string/settings_title"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.pd.game.magic64.Game"
            android:theme="@android:style/Theme.NoTitleBar"
          >
        </activity>
        <activity
            android:name="com.pd.game.magic64.OpenGame"
            android:label="@string/open_title"
            android:theme="@android:style/Theme.Wallpaper" >
        </activity>
        
        <activity
            android:name="com.pd.game.bt.DeviceListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/select_device"
            android:theme="@android:style/Theme.Dialog" />
    </application>

</manifest>